<%- include('./partials/header'); -%>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Oh! My Cat</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span
                        class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/manage">Blog Manage</a></li>
                        <li class="nav-item"><a class="nav-link" href="#!">About</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container py-5">
            <div class="row">
                <!-- Blog entries-->
                <div class="col-lg-8">
                    <!-- Nested row for non-featured blog posts-->
                    <div class="row">
                        <div class="col-lg-6">
                            <!-- Blog post-->
                            <% for(let items of blog_list){ %>
                            <% if(items[5] % 2 != 0) { %>
                            <div class="card mb-4">
                                <a href="#!"><img class="card-img-top" src="<%= items[0] %>" alt="<%= items[0] %>" /></a>
                                <div class="card-body">
                                    <div class="small text-muted">
                                        <%= items[1] %>
                                    </div>
                                    <div class="small text-muted">
                                        Size : <%= items[4] %>
                                    </div>
                                    <div class="small text-muted">
                                        Index : <%= items[5] %>
                                    </div>
                                    <h2 class="card-title h4">
                                        <%= items[2] %>
                                    </h2>
                                    <p class="card-text">
                                        <%= items[3] %>
                                    </p>
                                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Edit<%= items[6]+"Modal" %>">Edit Blog</a>
                                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#Remove<%= items[6]+"Modal" %>">Remove Blog</a>
                                </div>
                            </div>
                            <% }} %>
                        </div>
                        <div class="col-lg-6">
                            <!-- Blog post-->
                            <% for(let items of blog_list){ %>
                            <% if(items[5] % 2 == 0) { %>
                            <div class="card mb-4">
                                <a href="#!"><img class="card-img-top" src="<%= items[0] %>" alt="<%= items[0] %>" /></a>
                                <div class="card-body">
                                    <div class="small text-muted">
                                        <%= items[1] %>
                                    </div>
                                    <div class="small text-muted">
                                        Size : <%= items[4] %>
                                    </div>
                                    <div class="small text-muted">
                                        Index : <%= items[5] %>
                                    </div>
                                    <h2 class="card-title h4">
                                        <%= items[2] %>
                                    </h2>
                                    <p class="card-text">
                                        <%= items[3] %>
                                    </p>
                                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Edit<%= items[6] %>Modal">Edit Blog</a>
                                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#Remove<%= items[6] %>Modal">Remove Blog</a>
                                </div>
                            </div>
                            <% }} %>
                        </div>
                    </div>
                </div>
                <!-- Side widgets-->
                <div class="col-lg-4">
                    <!-- Search widget-->
                    <div class="card mb-4">
                        <div class="card-header">Do you wanna add something New dude?</div>
                        <div class="card-body">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddModal">Yub!</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Modal -->
        <div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="AddModalLabel">Add New Blog! Bro!</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/add" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label" for="image">Title Images:</label>
                                <input type="file" class="form-control" name="image" id="image" />
                            </div>
                            <div class="mb-3">
                                <label for="postDate" class="col-form-label">Date Time:</label>
                                <input type="text" class="form-control" name="postDate" id="postDate">
                            </div>
                            <div class="mb-3">
                                <label for="postTitle" class="col-form-label">Blog Title:</label>
                                <input type="text" class="form-control" name="postTitle" id="postTitle">
                            </div>
                            <div class="mb-3">
                                <label for="postContent" class="col-form-label">Blog Content:</label>
                                <textarea class="form-control" name="postContent" id="postContent" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="postSize" class="col-form-label">Card Size:</label>
                                <select class="form-select" aria-label="Default select example" name="postSize" id="postSize">
                                    <option selected>- Selest Card Size -</option>
                                    <option value="lg">Large</option>
                                    <option value="sm">Small</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="postIndex" class="col-form-label">Content Index:</label>
                                <input type="number" class="form-control" name="postIndex" id="postIndex">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">I has change my mind, Thanks Bro!</button>
                            <button type="submit" class="btn btn-primary">Let's Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Edit Blog Modal -->
        <% for(let items of blog_list){ %>
        <div class="modal fade" id="Edit<%= items[6] %>Modal" tabindex="-1" aria-labelledby="Edit<%= items[6] %>ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="Edit<%= items[6] %>ModalLabel">Want to edit someting huh!?</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/edit" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label" for="postImages">Title Images:</label>
                                <input type="file" class="form-control" id="postImages" />
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Date Time:</label>
                                <input type="text" class="form-control" id="recipient-name">
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Blog Title:</label>
                                <input type="text" class="form-control" id="recipient-name">
                            </div>
                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Blog Content:</label>
                                <textarea class="form-control" id="message-text" rows="3"></textarea>
                            </div>
                            <input type="hidden" name="blogID" value="">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, I'm Not.</button>
                            <button type="submit" class="btn btn-primary">Yeah!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Remove Blog Modal -->
        <% for(let items of blog_list){ %>
        <div class="modal fade" id="Remove<%= items[6] %>Modal" tabindex="-1" aria-labelledby="Remove<%= items[6] %>ModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="Remove<%= items[6] %>ModalLabel">Are you sure guy?</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        What you are going to do It can't go back dude.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nop. I'm Not strong enough</button>
                        <button type="button" class="btn btn-danger">Yep. Let's do it!</button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
<%- include('./partials/footer'); -%>